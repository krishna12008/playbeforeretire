# Application
NODE_ENV=development
PORT=5000
APP_NAME="Play Before Retire"
APP_URL=http://localhost:5000

# Frontend URL
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Database (AWS RDS Free Tier - PostgreSQL)
# Use db.t3.micro or db.t4g.micro instance
DATABASE_URL="postgresql://username:password@your-rds-endpoint.rds.amazonaws.com:5432/sports_db?schema=public"

# Redis (AWS ElastiCache Free Tier or local)
# Note: ElastiCache doesn't have free tier, use local Redis or upstash.com free tier
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Secrets (Generate using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
JWT_SECRET=your_super_secret_jwt_key_here_min_32_characters
JWT_REFRESH_SECRET=your_super_secret_refresh_key_here_min_32_characters
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# AWS Configuration (Free Tier)
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# AWS S3 (Free Tier: 5GB storage, 20,000 GET requests, 2,000 PUT requests per month)
AWS_S3_BUCKET=sports-management-uploads
AWS_S3_REGION=ap-south-1

# AWS SES (Free Tier: 62,000 emails per month when sending from EC2)
AWS_SES_FROM_EMAIL=noreply@yourdomain.com
AWS_SES_REGION=ap-south-1

# Email Configuration (Alternative: SendGrid free tier - 100 emails/day)
EMAIL_SERVICE=ses
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME="Play Before Retire"

# Twilio (For SMS/OTP)
# Free trial: $15 credit, then pay-as-you-go
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Alternative SMS: AWS SNS (Free Tier: 1,000 SMS per month to US only)
USE_AWS_SNS=false
AWS_SNS_REGION=ap-south-1

# Payment Gateway - Razorpay (India)
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret

# Alternative: Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# OTP Configuration
OTP_EXPIRY_MINUTES=10
OTP_LENGTH=6

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE=5242880
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp

# Session Configuration
SESSION_SECRET=your_session_secret_here

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Redis Keys TTL (in seconds)
CACHE_TTL_SHORT=300
CACHE_TTL_MEDIUM=1800
CACHE_TTL_LONG=3600

# Background Jobs
ENABLE_BACKGROUND_JOBS=true

# Monitoring (Optional)
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=

# Feature Flags
ENABLE_TEAM_CHAT=true
ENABLE_LIVE_SCORING=true
ENABLE_TOURNAMENTS=true
